    <class>com.Beans.LotesPagos</class>
    <class>com.Beans.PagosCheque</class>
    <class>com.Beans.Articulo</class>
    <class>com.Beans.ArticulosCompra</class>
    <class>com.Beans.ArticulosPedido</class>
    <class>com.Beans.ArticulosVenta</class>
    <class>com.Beans.Caja</class>
    <class>com.Beans.Categoria</class>
    <class>com.Beans.Cliente</class>
    <class>com.Beans.CompraPago</class>
    <class>com.Beans.Cotizacion</class>
    <class>com.Beans.CreditosVenta</class>
    <class>com.Beans.Factura</class>
    <class>com.Beans.FacturaCompra</class>
    <class>com.Beans.PagoCompra</class>
    <class>com.Beans.PagoCreditosVenta</class>
    <class>com.Beans.Pedido</class>
    <class>com.Beans.Proveedor</class>
    <class>com.Beans.Rubros</class>
    <class>com.Beans.Unidad</class>
    <class>com.Beans.Usuario</class>
    <class>com.Beans.Vendedor</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://locahost:3306/control_stock"/>
      <property name="javax.persistence.jdbc.password" value="dieguito"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
