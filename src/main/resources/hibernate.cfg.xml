<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://192.168.1.101:3306/control_stock</property>
    <property name="hibernate.connection.username">usuario</property>
    <property name="hibernate.connection.password">usuario</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping class="com.Beans.Clientes"/>
    <mapping class="com.Beans.Proveedor"/>
    <mapping class="com.Beans.Articulos"/>
    <mapping class="com.Beans.ArticulosVenta"/>
    <mapping class="com.Beans.Factura"/>
    <mapping class="com.Beans.ArticulosCompra"/>
    <mapping class="com.Beans.FacturaCompra"/>
    <mapping class="com.Beans.Caja"/>
    <mapping class="com.Beans.Rubros"/>
    <mapping class="com.Beans.Categoria"/>
    <mapping class="com.Beans.Usuario"/>
    <mapping class="com.Beans.CreditosVenta"/>
    <mapping class="com.Beans.PagoCreditosVenta"/>
    <mapping class="com.Beans.Unidad"/>
    <mapping class="com.Beans.Cotizacion"/>
    <mapping class="com.Beans.CompraPago"/>
    <mapping class="com.Beans.PagoCompra"/>
  </session-factory>
</hibernate-configuration>
